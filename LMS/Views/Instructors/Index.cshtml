@model IEnumerable<LMS.Models.Instructor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoursesAttended)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaOfExpertise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSME)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoursesAttended)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaOfExpertise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSME)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
