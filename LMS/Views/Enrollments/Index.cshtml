@model List<LMS.Models.Course>

@{
    ViewData["Title"] = "Enrollments";
}

<h2>Course Enrollments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Country</th>
            <th>Enrolled Students</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Country</td>
                <td>
                    <ul>
                        @foreach (var enrollment in course.Enrollments)
                        {
                            <li>@enrollment.Student.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <a href="/Enrollments/Edit/@course.Id" class="btn btn-primary">Edit Enrollment</a>
                </td>
            </tr>
        }
    </tbody>
</table>
